#! /bin/sh

[[ ! -f /sys/class/power_supply/BAT0/capacity ]] && echo "‚ùå" && exit 1

raw=$(cat /sys/class/power_supply/BAT0/status)

case $raw in
  "Discharging")
    EMOJI="üîã"
    ;;

  "Charging")
    EMOJI="‚ùì"
    ;;

  "Unknown")
    EMOJI="‚ùå"
    ;;

  "Full")
    EMOJI="‚úÖ"
    ;;
  *)
    EMOJI="‚ùì"
    ;;
esac

PERCENTAGE=$(cat /sys/class/power_supply/BAT0/capacity)

echo $EMOJI $PERCENTAGE%
